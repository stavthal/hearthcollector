<%- include('partials/header.ejs'); %>

<div style="text-align: center; margin-bottom: 3rem;">
    <h1>Select the cardset that you want to view the cards from in the dropdown
        list
    </h1>

</div>
<div style="text-align: center;"  class="cardsets-container">
    
    <form id="cardset-form" method="post" action="/cardsets">
        <label style="color: white;"for="cardset">Choose a cardset:</label><br>
        <select name="cardset" id="cardset">
            <option value="" disabled selected>Please select a cardset</option>
            <option value="Basic" class="cardset-option">Basic</option>
            <option value="Classic" class="cardset-option">Classic</option>
            <option value="Hall of Fame" class="cardset-option">Hall of Fame</option>
            <option value="Naxxramas" class="cardset-option">Naxxramas</option>
            <option value="Goblins vs Gnomes" class="cardset-option">Goblins vs Gnomes</option>
            <option value="Blackrock Mountain" class="cardset-option">Blackrock Mountain</option>
            <option value="The Grand Tournament" class="cardset-option">The Grand Tournament</option>
            <option value="The League of Explorers" class="cardset-option">The League of Explorers</option>

            <input type="text" id="hidden-text" style="visibility: hidden" value="">
        </select>
     
    </form>
    

    <br>
    <br>
    <br>
</div>

<script>
    
    var a = document.getElementById('cardset');
    a.addEventListener('change', function() {
        // console.log(this.value);
        document.querySelector("#hidden-text").value = this.value;
        document.getElementById("cardset-form").submit();
    }, false);
   


</script>

